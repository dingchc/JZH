<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 圆角按钮 -->
    <declare-styleable name="TSButton">
        <!-- 圆角 -->
        <attr name="corner" format="dimension" />
        <!-- 默认颜色 -->
        <attr name="normal_color" format="color" />
        <!-- 按下颜色 -->
        <attr name="pressed_color" format="color" />
    </declare-styleable>


    <!-- 注册页面Item -->
    <declare-styleable name="RegisterContentItem">

        <!-- 是否显示右侧点击箭头 -->
        <attr name="rc_show_tap_arrow" format="boolean" />

        <!-- 是否输入可编辑 -->
        <attr name="rc_is_input_editable" format="boolean" />

        <!-- 可编辑的输入长度 -->
        <attr name="rc_is_input_max_length" format="integer" />

        <!-- 输入类型 -->
        <attr name="rc_is_input_type" format="enum">
            <enum name="number" value="1" />
            <enum name="chinese" value="2" />
        </attr>

        <!-- 是否输入可选择 -->
        <attr name="rc_is_optional" format="boolean" />

        <!-- 图标 -->
        <attr name="rc_icon_src" format="reference" />

        <!-- 提示内容 -->
        <attr name="rc_hint" format="string" />

        <!-- 显示验证码 -->
        <attr name="rc_is_show_verify_code" format="boolean" />

    </declare-styleable>

    <!-- 圆角图片 -->
    <declare-styleable name="RoundAngleImageView">
        <attr name="roundWidth" format="dimension" />
        <attr name="roundHeight" format="dimension" />
    </declare-styleable>

    <!-- 自动布局 -->
    <declare-styleable name="AutoNextRowLayout">
        <attr name="an_margin_right" format="dimension" />
        <attr name="an_margin_top" format="dimension" />
    </declare-styleable>

    <!-- 我页面Item -->
    <declare-styleable name="MyselfContentItem">

        <!-- 是否显示右侧点击箭头 -->
        <attr name="mc_show_tap_arrow" format="boolean" />

        <!-- 图标 -->
        <attr name="mc_icon_src" format="reference" />

        <!-- 提示内容 -->
        <attr name="mc_hint" format="string" />

        <!-- 右侧文本内容 -->
        <attr name="mc_right_text" format="string" />

        <!-- 模式-->
        <attr name="mc_mode" format="enum">
            <!-- 默认 -->
            <enum name="item_default" value="0" />
            <!-- 班级 -->
            <enum name="item_class" value="1" />
            <!-- 图片 -->
            <enum name="item_image" value="2" />
            <!-- 消息提醒 -->
            <enum name="item_msg" value="3" />
        </attr>

    </declare-styleable>

    <!-- 编辑页面Item -->
    <declare-styleable name="DialogContentItem">

        <!-- 是否显示右侧点击箭头 -->
        <attr name="dc_show_tap_arrow" format="boolean" />

        <!-- 是否输入可编辑 -->
        <attr name="dc_is_input_editable" format="boolean" />

        <!-- 可编辑的输入长度 -->
        <attr name="dc_is_input_max_length" format="integer" />

        <!-- 输入类型 -->
        <attr name="dc_is_input_type" format="enum">
            <enum name="number" value="1" />
            <enum name="chinese" value="2" />
        </attr>


        <!-- 是否输入可选择 -->
        <attr name="dc_is_optional" format="boolean" />

        <!-- 图标 -->
        <attr name="dc_icon_src" format="reference" />

        <!-- 提示内容 -->
        <attr name="dc_hint" format="string" />

        <!-- 是否显示右侧验证码 -->
        <attr name="dc_is_show_verify_code" format="boolean" />


    </declare-styleable>

    <!-- 页面指示器 -->
    <declare-styleable name="TSPageIndicator">
        <!-- 页面数量 -->
        <attr name="dot_count" format="integer" />
        <!-- 指示器间隔 -->
        <attr name="dot_offset" format="dimension" />
        <!-- 正常指示器图片 -->
        <attr name="dot_drawable_normal" format="reference" />
        <!-- 选中指示器图片 -->
        <attr name="dot_drawable_selected" format="reference" />
    </declare-styleable>

    <!-- 上图片下文字 -->
    <declare-styleable name="ImageText">
        <attr name="it_src" format="reference" />
        <attr name="it_text" format="reference|string" />
        <attr name="it_text_color" format="reference|color" />
        <attr name="it_text_size" format="dimension" />
        <attr name="it_image_size" format="dimension" />
        <attr name="it_view_width" format="dimension" />
    </declare-styleable>

</resources>
