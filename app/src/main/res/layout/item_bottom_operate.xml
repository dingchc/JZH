<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.jzh.parents.app.Constants" />

        <variable
            name="pageMode"
            type="Integer" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_operate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_bg_gray_click_more"
            android:paddingBottom="4dp"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:paddingTop="4dp"
            android:text="@{safeUnbox(pageMode) == Constants.MY_LIVES_PAGE_TYPE_FAVORITE ? @string/myself_favorite_more : @string/subscribe_more_live}"
            android:textColor="@color/login_btn_green"
            android:textSize="12sp" />

    </LinearLayout>

</layout>

