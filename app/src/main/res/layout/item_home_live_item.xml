<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="itemEntity"
            type="com.jzh.parents.viewmodel.entity.LiveItemEntity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/home_live_will"
                android:textColor="@color/font_black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="晚上 19:30 不见不散"
                android:textColor="@color/font_gray"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawablePadding="2dp"
                android:drawableRight="@mipmap/icon_home_live_more"
                android:gravity="center_vertical"
                android:text="全部(6)"
                android:textColor="@color/font_gray"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- 直播条目信息 -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/timg" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <!-- 标题 -->
                    <TextView
                        android:id="@+id/tv_live_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="8dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:text="@string/tip_ops_permission"
                        android:textColor="@color/font_black"
                        android:textSize="14sp" />

                    <!-- 时间 -->
                    <TextView
                        android:id="@+id/tv_live_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/tv_live_title"
                        android:layout_below="@id/tv_live_title"
                        android:layout_marginTop="8dp"
                        android:drawableLeft="@mipmap/icon_home_live_time"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="2018-10-11 10:30"
                        android:textColor="@color/font_light_black"
                        android:textSize="11sp" />

                    <!-- 收听数 -->
                    <TextView
                        android:id="@+id/tv_live_attendance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/tv_live_time"
                        android:layout_below="@id/tv_live_time"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="3dp"
                        android:drawableLeft="@mipmap/icon_home_live_attendance"
                        android:drawablePadding="3dp"
                        android:gravity="center_vertical"
                        android:text="123456 收听"
                        android:textColor="@color/gray"
                        android:textSize="11sp" />

                    <!-- 评论数 -->
                    <TextView
                        android:id="@+id/tv_live_comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/tv_live_attendance"
                        android:layout_below="@id/tv_live_time"
                        android:layout_toRightOf="@id/tv_live_time"
                        android:drawableLeft="@mipmap/icon_home_live_comments"
                        android:drawablePadding="3dp"
                        android:gravity="center_vertical"
                        android:text="3456 评论"
                        android:textColor="@color/gray"
                        android:textSize="11sp" />

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="32dp"
                        android:layout_alignBottom="@id/tv_live_comments"
                        android:layout_alignRight="@id/tv_live_title"
                        android:background="@mipmap/icon_home_live_subscribe"
                        android:text="预约"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!-- Footer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="27dp"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/tv_view_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/round_bg_gray_click_more"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:text="查看全部往期作品"
                android:textColor="@color/font_gray"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>
</layout>
