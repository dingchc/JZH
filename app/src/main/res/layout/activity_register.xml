<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.jzh.parents.viewmodel.RegisterViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:contentDescription="@string/login"
            android:src="@mipmap/ic_login" />

        <!-- 学段 -->
        <com.jzh.parents.widget.RegisterContentItem
            android:id="@+id/item_learning_section"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:background="@drawable/round_bg_white"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="60dp"
            android:textSize="18sp"
            app:rc_hint="@string/input_learning_section"
            app:rc_icon_src="@mipmap/icon_register_learning_section"
            />

        <!-- 入学年份 -->
        <com.jzh.parents.widget.RegisterContentItem
            android:id="@+id/item_learning_year"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:background="@drawable/round_bg_white"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="4dp"
            android:textSize="18sp"
            app:rc_hint="@string/input_learning_year"
            app:rc_icon_src="@mipmap/icon_register_learning_year"
            />

        <!-- 名称 -->
        <com.jzh.parents.widget.RegisterContentItem
            android:id="@+id/item_student_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:background="@drawable/round_bg_white"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="4dp"
            android:textSize="18sp"
            app:rc_hint="@string/input_student_name"
            app:rc_icon_src="@mipmap/icon_register_name"
            app:rc_is_input_editable="true"
            app:rc_show_tap_arrow="false"
            app:contentText="@={viewModel.studentName}"
            />

        <!-- 身份 -->
        <com.jzh.parents.widget.RegisterContentItem
            android:id="@+id/item_select_role"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:background="@drawable/round_bg_white"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="4dp"
            android:textSize="18sp"
            app:rc_hint="@string/input_select_role"
            app:rc_icon_src="@mipmap/icon_register_role"
            app:rc_show_tap_arrow="false"
            app:rc_is_optional="true"
            app:checkedValue="@={viewModel.selectRole}"
            />

        <com.jzh.parents.widget.TSButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginTop="40dp"
            android:text="@string/finish"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:onClick="onRegisterBtnClick"
            app:corner="8dp"
            app:normal_color="@color/login_btn_green"
            app:pressed_color="@color/login_btn_green_dark" />

    </LinearLayout>

</layout>